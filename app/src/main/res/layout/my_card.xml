<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlHardcoded">

    <data>
        <variable
            name="viewModel"
            type="ir.fearefull.knowledgeextractionapp.ui.relation.MyCardViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="@{() -> viewModel.onItemClick()}">

        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@{viewModel.coverImage}"
            android:contentDescription="@{viewModel.description}" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.name}"
            android:gravity="center"
            android:layout_toLeftOf="@id/cover_image"
            android:layout_centerVertical="true"
            android:textColor="@color/secondaryTextColorLightTheme"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.description}"
            android:gravity="center"
            android:layout_toLeftOf="@id/name"
            android:layout_centerVertical="true"
            android:textColor="@color/secondaryTextColorLightTheme"/>
    </RelativeLayout>
</layout>